<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="650.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs112.anikalamud3.ffxivInfoController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="titleLabel" text="Welcome to Eorzea!">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <VBox prefHeight="500.0" prefWidth="410.0">
         <children>
            <ImageView fx:id="ffxivShadowbringersArt" fitHeight="350.0" fitWidth="620.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <image>
                  <Image url="@../../ffxiv-shadowbringers-art-1.png.jpg" />
               </image>
            </ImageView>
            <Label fx:id="ffxivInfoLabel" alignment="CENTER" minHeight="75.0" minWidth="400.0" prefHeight="90.0" prefWidth="400.0" text="What is Final Fantasy XIV?" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets left="115.0" top="15.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="ffxivButton" alignment="CENTER" mnemonicParsing="false" onAction="#onFfxivButtonClick" text="FFXIV" textAlignment="CENTER">
               <VBox.margin>
                  <Insets left="290.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
